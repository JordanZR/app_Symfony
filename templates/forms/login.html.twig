{% extends 'base.html.twig' %}

{% block login %}
    <div class="container">
        <div class="row">
            <h3 class="mt-5 mb-5">Login de usuarios</h3>
            <div class="col-md-6 offset-md-3">
                <!-- Agregamos un label y un input para cada atributo de la clase Usuario -->
                {{ form_start(form, {'action': path('app_login'), 'method':'POST'}) }}
                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email, {'attr':{'class':'form-control'},'type': 'email'})}}
                </div>
                <div class="form-group">
                    {{ form_label(form.password) }}
                    {{ form_widget(form.password, {'attr':{'class':'form-control'}, 'type': 'password'}) }}
                </div>
                <div class="form-group">
                    <button style="color:white" type="submit" class="btn btn-info mt-2">Log in</button>
                    <button type="button" class="btn btn-success mt-2"><a style="text-decoration:none; color:white" href="{{ path('app_sign') }}">Register</a></button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}